<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.kaoni.theCulureOfLearning.lhwBoard.mapper.LhwBoardMapper">
	<insert id="writePost">
		INSERT INTO LHWPOST (title, contents, write_date)
		VALUES (#{title}, #{contents}, current_timestamp());
	</insert>

	<select id="selectPostList"
		resultType="com.kaoni.theCulureOfLearning.domain.LhwPost">
		SELECT * FROM LHWPOST;
	</select>
</mapper>